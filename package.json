{
	"name": "rise-blog",
	"version": "1.0.0",
	"description": "Simple blog api",
	"main": "build/index.js",
	"bin": "./bin/cli.js",
	"node": "16",
	"repository": "https://github.com/Seunope/node-blog-api",
	"homepage": "https://github.com/Seunope/node-blog-api",
	"author": "Ope Mesonrale",
	"license": "MIT",
	"scripts": {
		"set-node-env": "set NODE_ENV=test",
		"test2": "yarn set-node-env && jest --setupFiles dotenv/config --coverage --forceExit --detectOpenHandles",
		"test": "yarn set-node-env && jest --setupFiles dotenv/config --detectOpenHandles",
		"coverage": "npx jest --coverage",
		"dev": "nodemon -r dotenv/config src/index.ts",
		"start": "node -r dotenv/config build/src/index.js",
		"migrate": "yarn sequelize-cli db:migrate",
		"migrate:u": "yarn sequelize-cli db:migrate:undo",
		"migrate:u:file": "yarn sequelize-cli db:migrate:undo --name",
		"migrate:u:a": "yarn sequelize-cli db:migrate:undo:all",
		"model": "yarn sequelize-cli model:generate --name",
		"migration": "yarn sequelize-cli migration:create --name",
		"deploy": "yarn migrate && yarn build && yarn start",
		"lint": "eslint --ext .ts --ignore-path .gitignore .",
		"build": " rimraf ./build && tsc -p ."
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"./jest.setup.ts"
		]
	},
	"dependencies": {
		"axios": "^0.21.1",
		"bcrypt": "^5.1.1",
		"compression": "^1.7.4",
		"config": "^3.3.8",
		"cors": "^2.8.5",
		"date-fns": "^2.23.0",
		"dotenv": "^16.0.1",
		"ejs": "^3.1.8",
		"express": "^4.17.1",
		"express-rate-limit": "^5.5.0",
		"express-validator": "^6.12.1",
		"helmet": "^4.6.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"nanoid": "^3.1.25",
		"pg": "^8.7.1",
		"pg-hstore": "^2.3.4",
		"redis": "^4.6.8",
		"sequelize": "^6.6.5",
		"sequelize-cli": "^6.2.0",
		"sequelize-cursor-pagination": "^3.4.0",
		"winston": "^3.8.2",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"devDependencies": {
		"@swc/core": "^1.3.78",
		"@types/compression": "^1.7.2",
		"@types/config": "^3.3.0",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-rate-limit": "^5.1.3",
		"@types/jest": "^29.2.4",
		"@types/jsonwebtoken": "^8.5.4",
		"@types/morgan": "^1.9.3",
		"@types/sequelize": "^4.28.14",
		"@types/supertest": "^2.0.12",
		"eslint": "^7.32.0",
		"eslint-config-airbnb-typescript": "^12.3.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.24.0",
		"faker": "^6.6.6",
		"jest": "^29.3.1",
		"rimraf": "^5.0.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4"
	}
}
